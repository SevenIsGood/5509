<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="MyActionbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
    </style>

    <style name="MyAppTheme" parent="AppBaseTheme">
        <item name="actionBarTabStyle">@style/AppBaseTheme.ActionBarTabStyle</item>
    </style>

    <style name="AppBaseTheme.ActionBarTabStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:paddingLeft">300dp</item>
        <item name="android:paddingRight">300dp</item>
    </style>
    <style name="Widget.AppCompat.Base.ActionBar.TabView" parent="">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="devlistStyle">
        <item name="android:dividerHeight">5dp</item>
    </style>
    <style name="nameStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="nameStyle.inactive">
        <item name="android:textColor">#ccc</item>
    </style>

    <style name="nameStyleSelected">
        <item name="android:textColor">#c33</item>
    </style>

    <style name="statusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="statusStyleSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="statusStyle.Success" parent="statusStyle">
        <item name="android:textColor">#336633</item>
    </style>

    <style name="statusStyle.Busy" parent="statusStyle">
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <style name="statusStyle.Failure" parent="statusStyle">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="statusStyle.Disabled" parent="statusStyle">
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="BlackImagviewStyle">
        <item name="android:layout_width">@dimen/imgeview_dimen</item>
        <item name="android:layout_height">@dimen/imgeview_dimen</item>
        <item name="android:src">@drawable/black_1</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="BlackImagviewStyle_l">
        <item name="android:layout_width">@dimen/imgeview_dimen_l</item>
        <item name="android:layout_height">@dimen/imgeview_dimen_l</item>
        <item name="android:src">@drawable/black_1</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="BlackImagviewStyle_xl">
        <item name="android:layout_width">@dimen/imgeview_dimen_xl</item>
        <item name="android:layout_height">@dimen/imgeview_dimen_xl</item>
        <item name="android:src">@drawable/black_1</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="RedImagviewStyle">
        <item name="android:layout_width">@dimen/imgeview_dimen</item>
        <item name="android:layout_height">@dimen/imgeview_dimen</item>
        <item name="android:src">@drawable/red_1</item>
        <item name="android:visibility">invisible</item>

    </style>
    <style name="RedImagviewStyle_l">
        <item name="android:layout_width">@dimen/imgeview_dimen_l</item>
        <item name="android:layout_height">@dimen/imgeview_dimen_l</item>
        <item name="android:src">@drawable/red_1</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="RedImagviewStyle_xl">
        <item name="android:layout_width">@dimen/imgeview_dimen_xl</item>
        <item name="android:layout_height">@dimen/imgeview_dimen_xl</item>
        <item name="android:src">@drawable/red_1</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
