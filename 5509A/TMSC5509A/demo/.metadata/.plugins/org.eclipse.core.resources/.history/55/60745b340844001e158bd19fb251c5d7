/**********************************************************/
/*                                                        */
/*         LINKER command file for LEAD3 memory map       */
/*                                                        */
/**********************************************************/

-stack 2048
-sysstack 2048
MEMORY
{
    DARAM:	o=0x100,	l=0x07f00
    VECT :  o=0x8000,	l=0x100
    DARAM2: o=0x8100,	l=0x7f00
    SARAM:  o=0x10000,	l=0x30000
    SDRAM:	o=0x40000,	l=0x3e0000
}

SECTIONS
{
    .text:    {} > SARAM
    .vectors: {} > VECT
    .trcinit: {} > DARAM
    .gblinit: {} > DARAM
     frt:     {} > DARAM

    .cinit:   {} > SDRAM
    .pinit:   {} > DARAM
    .sysinit: {} > DARAM
    .bss:     {} > DARAM2
    .far:     {} > DARAM2
    .const:   {} > SDRAM
    .switch:  {} > DARAM
    .sysmem:  {} > DARAM
    .cio:     {} > DARAM
    .MEM$obj: {} > DARAM
    .sysheap: {} > DARAM2
    .sysstack {} > DARAM
    .stack:   {} > DARAM
    .image:   {} > SDRAM

}
